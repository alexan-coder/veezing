<h1><%=@video.title%></h1>
	<p><%=@video.description%></p>
	<iframe id="ytplayer" type="text/html" width="1024" height="576"
src="https://www.youtube.com/embed/<%=@video.url%>?cc_load_policy=1&modestbranding=1&color=white&theme=light"
frameborder="0" allowfullscreen></iframe>

<% if @video == Video.first %>
	<%= link_to "next", @video.prev %>
<% elsif @video == Video.last%>
	<%= link_to "prev", @video.next %>
<% else %>
	<%= link_to "next", @video.prev %>
	<%= link_to "prev", @video.next %>
<% end %>



<%= form_for @zing do |f| %>
<%= f.hidden_field :video_id, value: @video.id %>
<%= f.submit "zing it!"%>
<%end%>


<%= link_to "my zings", zings_path, { class: "my-zings"}%>

<h3><%= link_to 'Signout', destroy_user_session_path, :method => :delete %></h3>





<%= form_for @comment do |f| %>
<%= f.hidden_field :video_id, value: @video.id %>
<%= f.label :comment %>
<%= f.text_field :body %>

<%end%>

<% @comments.each do |comment| %>
<p><%= comment.user.email %> <%= comment.body %> </p>
<% end %>


